@font-face {
    font-family: 'iconfont';
    src: url(data:font/truetype;charset=utf-8;base64,) format('truetype');
    font-weight: normal;
    font-style: normal;
}

.iconfont {
    font-family:"iconfont" !important;
    font-style:normal;
    color: gray;
    font-size: 1rem;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
.icon-search:before { 
    content: "\e600";
}

.container {
    width: 700rpx;
    position: relative;
}


.search-input-container {
    height: 60rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-left: 5rpx;
    border: 2px solid #999999;
    border-radius: 3px;
    transition: border 0.5 ease-in-out;
}

.search-input {
    width: 600rpx;
    height: 50rpx;
    margin-left: 5rpx;
}

.focused {
    border: 2px solid rgb(228, 124, 55);
}

.placeholder {
    font-size: .8rem;
    letter-spacing: 1px;
    text-indent: .2rem;
}


/* result panel */
.search-result-panel {
    position: absolute;
    z-index: 100;
    width: 100%;
    display: flex;
    flex-direction: column;
    background-color: rgb(230, 229, 173);
    border-radius: 8rpx;
}

.search-result {
    height: 60rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 10rpx;
    border-top: 1px solid gray;
    line-height: 50rpx;
    color: #999999;
    font-size: 0.9rem;
}

.result-name {
    font-size: .9rem;
    letter-spacing: .18rem;
}

.result-acquired-count {
    font-size: 0.78rem;
    font-style: italic;
    margin-right: .2rem;
}
