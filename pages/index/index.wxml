<!--index.wxml-->
<view class="container">
    <marqueen
        initNotification="{{notification}}"
        space="1"
        interval="20"
    >
    </marqueen>
    <search-box></search-box>
    <swiper
        class="candidate-list"
        indicator-dots="{{false}}"
        autoplay="{{false}}"
        vertical="{{false}}"
        current="0"
        duration="1000"
        >
        <swiper-item item-id="index" wx:for="{{candidateList}}" wx:key="id">
            <candidate-card
                candidate-name="{{item.name}}"
                candidate-photo="{{item.photoSrc}}"
                acquired-count="{{item.acquiredCount}}"
            >
            </candidate-card>
        </swiper-item>
    </swiper>
    <!-- <view class="chart-container">
        
    </view> -->
    <ec-canvas id="vote-statistic" canvas-id="vote-statistic-bar" ec="{{ ec }}"></ec-canvas>
</view>
